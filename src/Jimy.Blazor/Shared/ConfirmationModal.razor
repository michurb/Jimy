<div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" id="confirmation-modal">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <h3 class="text-lg font-medium text-gray-900 mb-4">@Title</h3>
    <p class="mb-4">@Message</p>
    <div class="flex justify-end">
      <button @onclick="OnCancel" class="mr-2 px-4 py-2 bg-gray-300 text-gray-800 rounded-md">Cancel</button>
      <button @onclick="OnConfirm" class="px-4 py-2 bg-red-500 text-white rounded-md">Confirm</button>
    </div>
  </div>
</div>

@code {
  [Parameter] public string Title { get; set; }
  [Parameter] public string Message { get; set; }
  [Parameter] public EventCallback OnConfirm { get; set; }
  [Parameter] public EventCallback OnCancel { get; set; }
}